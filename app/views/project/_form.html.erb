<%= form_for @project, url: {action: "create"} do |f| %>
<br>
<%= f.label :name %>
<%= f.text_field :name, class: "form-control", autofocus: true %>
<br>
<%= f.label :short_name %>
<%= f.text_field :short_name %>
<br>
<%= f.label :description %>
<%= f.text_area :description %>
<br><br>
<%= f.submit %>
<% end %>